{
    "compilerOptions": {
      "target": "ES6",                           // Compile to ES6 JavaScript
      "module": "commonjs",                      // Use CommonJS modules
      "esModuleInterop": true,                   // Allow import of non-ES modules
      "skipLibCheck": true,                      // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true   // Ensure consistent casing of file names
    },
    "include": ["tests/**/*.ts"]                 // Include all files in the tests folder
  }  